@{ 
    ADIM_2.DB.Members logonUser=(ADIM_2.DB.Members)Session["LogonUser"];
}
<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Meta Tags -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewBag.Title-ADIM 2</title>

    <!-- CSS Styles -->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css?family=Bree+Serif" rel="stylesheet">

    <!-- Javascripts -->
    <script src="node_modules\jquery\dist\jquery.min.js"></script>
    <script src="node_modules\bootstrap\dist\js\bootstrap.min.js"></script>

</head>
<body>
    <!-- navbar begin -->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <a class="navbar-brand" href="@Url.Action("index", "i")">SANAYİ PAZARI</a>
        <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
                aria-expanded="false" aria-label="Menü"></button>
        <div class="collapse navbar-collapse" id="collapsibleNavId">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
               
            </ul>
            <ul class="navbar-nav navbar-right">
                @if (logonUser== null)
                {


                    <li class="nav-item">
                        <a class="nav-link" href="~/Account/Register">
                            <span class="fa fa-user-plus mr-2"></span>Kayıt Ol
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Account/Login">
                            <span class="fa fa-sign-in mr-2"></span>Giriş
                        </a>
                    </li>
                }
                else
                {
            <li>
                <a href="~/Account/Profil">
                    <span class="glyphicon glyphicon-user"></span>&nbsp;@($"{logonUser.name} {logonUser.surname}")
                </a>
            </li>

                        }

            <li class="nav-item">
                <a class="nav-link" href="~/Account/logout">
                    <span class="fa fa-sign-out mr-2"></span>Çıkış
                </a>
            </li>
            </ul>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <div class="well">
        <div class="row">

            <div class="col-md-16 col-md-offset-1 text-center">
                <a href="http://www.facebook.com" target="_blank">
                    <span class="fa fa-facebook-square fa-2x"></span>
                </a>

                <a href="http://www.twitter.com" target="_blank">
                    <span class="fa fa-twitter-square fa-2x"></span>
                </a>

                <a href="http://www.youtube.com" target="_blank">
                    <span class="fa fa-youtube-square fa-2x text-danger"></span>
                </a>

            </div>
        </div>
        <div class="col-md-16 col-md-offset-2 text-center">
            <a href="mailto:abc@mail.com" class="btn btn-info btn-sm">
                <span class="fa fa-at mr-2"></span>E-Posta Gönder
            </a>
        </div>
        <div class="col-md-16 col-md-offset-1 text-center">
            &copy; 2021
        </div>
    </div>
</body>
</html>